{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc-9 生成活动文件",
            "command": "/usr/bin/gcc-9",
            "args": [
                "-fdiagnostics-color=always",
                "-m32",
                "-g",
                "-I${workspaceFolder}/src/include",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "shell",
            "label": "make: build onix app",
            "command": "make",
            "args": [
                "../build/builtin/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "nasm",
            "command": "",
            "args": [
                "/usr/bin/nasm",
                "-f",
                "elf32",
                "-gdwarf",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                ";",
                "/usr/bin/gcc-9",
                "-fdiagnostics-color=always",
                "-m32",
                "-g",
                "-static",
                "-I${workspaceFolder}/src/include",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}